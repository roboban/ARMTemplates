{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "IsDemo": {
            "defaultValue": "No",
            "type": "Bool"
        },
   	    "Location": {
      	    "type": "string",
      	    "defaultValue": "[resourceGroup().location]",
      	    "metadata": {
        	"description": "Location for all resources."}
    	},
        "UserName": {
            "defaultValue": "userName",
            "type": "String"
        },
        "UserPassword": {
            "defaultValue": "userName@001",
            "type": "String"
        },
        "VirtualMachine_APP_Count": {
            "defaultValue": 1,
            "type": "int"
        },
        "VirtualMachine_APP": {
            "defaultValue": "vmNameAPP",
            "type": "String"
        },
        "VirtualMachine_SKU_APP": {
            "defaultValue": "vmSKUAPPName",
            "type": "String"
        },
        "VirtualMachine_DB": {
            "defaultValue": "vmNameDB",
            "type": "String"
        },
        "VirtualMachine_SKU_DB": {
            "defaultValue": "vmSKUDBName",
            "type": "String"
        },
        "VirtualNetwork_Name": {
            "defaultValue": "vnetDemo",
            "type": "String"
        },
        "SubnetName_Name": {
            "defaultValue": "Default",
            "type": "String"
        }
    },
    "variables": {
        "NetworkInterfaces_VM_APP": {
            "nicName": "[concat('nic', parameters('VirtualMachine_APP'),'-', 'app')]"
        },
        "NetworkInterfaces_VM_DB": {
            "nicName": "[concat('nic', parameters('VirtualMachine_DB'),'-', 'db')]"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "name": "linkedTemplate",
            "apiVersion": "2017-05-10",
            "properties": {
              "mode": "Incremental",
              "templateLink": {
                "uri": "[uri(deployment().properties.templateLink.uri, 'vmHANADisks.json')]",
                "contentVersion": "1.0.0.0"
              },
              "parameters":
                {
                    "VM_NAME":{"value": "[parameters('VirtualMachine_DB')]"},
                    "SKU":{"value": "[parameters('VirtualMachine_SKU_DB')]"}
                }
            }
          },
        {
            "comments": "SAP APP Server",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[concat(parameters('VirtualMachine_APP'), padLeft(copyindex(),2,'0'))]",
            "apiVersion": "2018-06-01",
            "location": "[parameters('Location')]",
            "copy": {
                "name": "vmAppCopy",
                "count": "[parameters('VirtualMachine_APP_Count')]"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('VirtualMachine_SKU_APP')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "osType": "Windows",
                        "name": "[concat(parameters('VirtualMachine_APP'),'_OsDisk')]",
                        "createOption": "FromImage",
                        "caching": "ReadWrite",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        },
                        "diskSizeGB": 127
                    },
                    "dataDisks": []
                },
                "osProfile": {
                    "computerName":  "[concat(parameters('VirtualMachine_APP'), padLeft(copyindex(),2,'0'))]",
                    "adminUsername": "[parameters('UserName')]",
                    "adminPassword": "[parameters('UserPassword')]",
                    "windowsConfiguration": {
                        "provisionVMAgent": true,
                        "enableAutomaticUpdates": true
                    },
                    "secrets": [],
                    "allowExtensionOperations": true
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('NetworkInterfaces_VM_APP'), padLeft(copyindex(),2,'0')))]"
                        }
                    ]
                },
                "licenseType": "Windows_Server"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('NetworkInterfaces_VM_APP'), padLeft(copyindex(),2,'0')))]"
            ]
        },
        {
            "comments": "SAP APP Server NIC",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[variables('NetworkInterfaces_VM_APP')]",
            "apiVersion": "2018-10-01",
            "location": "[parameters('Location')]",
            "tags": {},
            "scale": null,
            "properties": {
                "provisioningState": "Succeeded",
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "provisioningState": "Succeeded",
                            "privateIPAddress": "192.168.91.4",
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetwork_name'), parameters('SubnetName_Name'))]"
                            },
                            "primary": true,
                            "privateIPAddressVersion": "IPv4"
                        }
                    }
                ],
                "enableAcceleratedNetworking": true,
                "enableIPForwarding": false,
                "primary": true,
                "tapConfigurations": []
            },
            "dependsOn": []
        },

        {
            "comments": "SAP DB Server",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[parameters('VirtualMachine_DB')]",
            "apiVersion": "2018-06-01",
            "location": "[parameters('Location')]",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('VirtualMachine_SKU_DB')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "osType": "Windows",
                        "name": "[concat(parameters('VirtualMachine_DB'),'_OsDisk')]",
                        "createOption": "FromImage",
                        "caching": "ReadWrite",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        },
                        "diskSizeGB": 127
                    },
                    "dataDisks": ["[reference('linkedTemplate').outputs.SKU]"]
                },
                "osProfile": {
                    "computerName": "[parameters('VirtualMachine_DB')]",
                    "adminUsername": "[parameters('UserName')]",
                    "adminPassword": "[parameters('UserPassword')]",
                    "windowsConfiguration": {
                        "provisionVMAgent": true,
                        "enableAutomaticUpdates": true
                    },
                    "secrets": [],
                    "allowExtensionOperations": true
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('NetworkInterfaces_VM_DB'))]"
                        }
                    ]
                },
                "licenseType": "Windows_Server"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', variables('NetworkInterfaces_VM_DB'))]"
            ]
        },
        {
            "comments": "SAP DB Server NIC",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[variables('NetworkInterfaces_VM_DB')]",
            "apiVersion": "2018-10-01",
            "location": "[parameters('Location')]",
            "tags": {},
            "scale": null,
            "properties": {
                "provisioningState": "Succeeded",
                "resourceGuid": "48769b27-c742-4919-be94-fda170f79d45",
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "provisioningState": "Succeeded",
                            "privateIPAddress": "192.168.91.4",
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetwork_name'), parameters('SubnetName_Name'))]"
                            },
                            "primary": true,
                            "privateIPAddressVersion": "IPv4"
                        }
                    }
                ],
                "enableAcceleratedNetworking": true,
                "enableIPForwarding": false,
                "primary": true,
                "tapConfigurations": []
            },
            "dependsOn": []
        },
        {
            "comments": "Only if the demo mode is selected",
            "condition": "[equals(parameters('IsDemo'), 'Yes')]",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[parameters('virtualNetwork_name')]",
            "apiVersion": "2018-10-01",
            "location": "[parameters('Location')]",
            "scale": null,
            "properties": {
                "provisioningState": "Succeeded",
                "addressSpace": {
                    "addressPrefixes": [
                        "192.168.0.0/24"
                    ]
                },
                "subnets": [
                    {
                        "name": "default",
                        "properties": {
                            "provisioningState": "Succeeded",
                            "addressPrefix": "192.168.0.0/26",
                            "delegations": []
                        }
                    }
                ]
            },
            "dependsOn": []
        },
        {
            "comments": "Only if the demo mode is selected",
            "condition": "[equals(parameters('IsDemo'), 'Yes')]",
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "name": "[concat(parameters('VirtualNetwork_Name'), '/', parameters('SubnetName_Name'))]",
            "apiVersion": "2018-10-01",
            "scale": null,
            "properties": {
                "provisioningState": "Succeeded",
                "addressPrefix": "192.168.0.0/26",
                "delegations": []
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', parameters('VirtualNetwork_Name'))]"
            ]
        }
    ]
}